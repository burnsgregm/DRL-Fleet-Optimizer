{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "installCommand": "pip install -r fastapi_requirements.txt",
      "startCommand": "uvicorn fastapi_main:app --host 0.0.0.0 --port $PORT"
    }
  },
  "deploy": {
    "startCommand": "uvicorn fastapi_main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}